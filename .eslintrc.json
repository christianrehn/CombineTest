{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react-hooks",
    "import"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "import/no-unresolved": 2,
    "import/named": 2,
    "no-console": [
      2,
      {
        "allow": [
          "time",
          "timeEnd",
          "error"
        ]
      }
    ],
    "no-alert": "error",
    "no-debugger": "error"
  },
  "overrides": [
    {
      "files": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "rules": {
      }
    },
    {
      "files": [
        "src/**/__tests__/**/*.*"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "directory": "./"
      }
    },
    "import/ignore": [
      "lodash"
    ]
  }
}
